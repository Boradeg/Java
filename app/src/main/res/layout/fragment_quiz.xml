<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".QuizFragment">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:padding="10dp"
        android:background="@drawable/gredient9"
        android:id="@+id/tool_layout"
        tools:ignore="MissingConstraints">

        <ImageView
            android:id="@+id/icon"
            android:layout_width="50dp"
            android:layout_alignParentLeft="true"
            android:layout_height="50dp"
            android:src="@drawable/java" />

        <TextView
            android:id="@+id/locationName"
            android:layout_width="wrap_content"
            android:visibility="visible"
            android:textStyle="bold"
            android:padding="10dp"
            android:layout_toRightOf="@+id/icon"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content"
            android:text="Java Tutorial"
            android:textColor="@color/white"
            android:textSize="20sp" />


        <ImageView
            android:id="@+id/changeLanguageButton"
            android:layout_width="50dp"
            android:layout_alignParentRight="true"
            android:layout_height="50dp"
            android:src="@drawable/user" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tool_layout"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="20dp"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/layout_difficult"

            >
            <TextView
                android:id="@+id/tv_DLevel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Difficulty Level"
                android:textSize="20dp"
                android:textColor="@color/Quiz_text__color"
                android:textStyle="bold"

                android:layout_centerHorizontal="true"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/black"
                android:layout_toLeftOf="@+id/tv_DLevel"
                android:layout_marginHorizontal="10dp"
                android:layout_centerVertical="true"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/black"
                android:layout_toRightOf="@+id/tv_DLevel"
                android:layout_marginHorizontal="10dp"
                android:layout_centerVertical="true"
                />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout_beginner_card"
            android:layout_width="match_parent"
            android:layout_marginHorizontal="20dp"
            android:layout_height="wrap_content"
            android:elevation="23dp"
            android:layout_below="@+id/layout_difficult"
            android:layout_marginTop="30dp"
            android:background="@drawable/bgcard">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:padding="13dp"
                android:text="Beginner"
                android:textColor="@color/line_color"
                android:textSize="17dp"
                android:textStyle="bold" />

        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/layout_intermediate_card"
            android:layout_width="match_parent"
            android:layout_marginHorizontal="20dp"
            android:layout_height="wrap_content"
            android:elevation="23dp"
            android:layout_below="@+id/layout_beginner_card"
            android:layout_marginTop="30dp"
            android:background="@drawable/bgcard">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:padding="13dp"
                android:text="Intermediate"
                android:textColor="@color/line_color"
                android:textSize="17dp"
                android:textStyle="bold" />

        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/layout_expert_card"
            android:layout_width="match_parent"
            android:layout_marginHorizontal="20dp"
            android:layout_height="wrap_content"
            android:elevation="23dp"
            android:layout_below="@+id/layout_intermediate_card"
            android:layout_marginTop="30dp"
            android:background="@drawable/bgcard">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:padding="13dp"
                android:text="Expert"
                android:textColor="@color/line_color"
                android:textSize="17dp"
                android:textStyle="bold" />

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/layout_no_of_que"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="20dp"
            android:layout_below="@+id/layout_expert_card"

            >
            <TextView
                android:id="@+id/tv_DLevel2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Number of Questions"
                android:textSize="20dp"
                android:textColor="@color/Quiz_text__color"
                android:textStyle="bold"
                android:layout_centerHorizontal="true"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/black"
                android:layout_toLeftOf="@+id/tv_DLevel2"
                android:layout_marginHorizontal="10dp"
                android:layout_centerVertical="true"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/black"
                android:layout_toRightOf="@+id/tv_DLevel2"
                android:layout_marginHorizontal="10dp"
                android:layout_centerVertical="true"
                />

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/layout_no_of_que2"
            android:elevation="23dp"
            android:paddingHorizontal="15dp"
            android:layout_margin="20dp"
            android:background="@drawable/bgcard"
            android:layout_below="@+id/layout_no_of_que"

            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10"
                android:textSize="20dp"
                android:padding="13dp"
                android:layout_alignParentLeft="true"
                android:textColor="@color/line_color"
                android:textStyle="bold"
                android:layout_centerHorizontal="true"
                />


        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/layout_no_of_que4"
            android:elevation="23dp"
            android:paddingHorizontal="15dp"
            android:layout_margin="20dp"
            android:background="@drawable/bgcard"
            android:layout_below="@+id/layout_no_of_que"
            android:layout_alignParentRight="true"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="25"
                android:textSize="20dp"
                android:padding="13dp"
                android:textColor="@color/line_color"
                android:textStyle="bold"
                android:layout_centerHorizontal="true"
                />


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout_no_of_que5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layout_no_of_que"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/bgcard"
            android:elevation="23dp"
            android:paddingHorizontal="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="13dp"
                android:text="15"
                android:textColor="@color/line_color"
                android:textSize="20dp"
                android:textStyle="bold" />


        </RelativeLayout>
        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="match_parent"
            android:id="@+id/startQuizButton"
            android:layout_height="wrap_content"
            android:layout_below="@id/layout_no_of_que5"
            android:layout_marginStart="20dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/gredient8"
            android:text="Start Quiz"
            android:textAllCaps="false"
            android:textColor="@color/white" />


    </RelativeLayout>



    </RelativeLayout>

</FrameLayout>